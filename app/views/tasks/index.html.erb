<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Skills</th>
      <th>F_user_id</th>
      <th>M_user_id</th>
      <th>Status</th>
      <th>git</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.price %></td>
        <td><%= task.skills %></td>
        <td><%= task.f_user_id %></td>
        <td><%= task.m_user_id %></td>
        <td><%= task.status %></td>
        <td><%= task.git %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

